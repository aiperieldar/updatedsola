<!doctype html>
<html lang="en">

<head>
  <title>Sola</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/style.css">
</head>

<body>

  <div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar" class="order-last" class="img" style="background-image: url(images/bg_1.jpg);">
      <div class="custom-menu">
        <button type="button" id="sidebarCollapse" class="btn btn-primary">
        </button>
      </div>
      <div class="">
        <h1><a href="index.html" class="logo"><i class="far fa-bell"></i> Sola</a></h1>
        <ul class="list-unstyled components mb-5">
          <li class="active">
            <a href="/newatt"><span class="fa fa-eye mr-3"></span> Attendance</a>
          </li>
          <li>
            <a href="/homework"><span class="fa fa-list mr-3"></span> Homework</a>
          </li>
          <li>
            <a href="/progress"><span class="fa fa-chart-bar mr-3"></span> Progress</a>
          </li>
          <li>
            <a href="/profile"><span class="far fa-address-card mr-3"></span> Profile</a>
          </li>
          <li>
            <a href="/logout"><span class="fa fa-sign-out-alt mr-3"></span> Sign Out</a>
          </li>
        </ul>


      </div>

    </nav>

    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5">
      <div class="profile">
        <div class="col-sm-6" id="mainBlock">
          <div class="well">
            <h3>ðŸ’Ž My Information</h3>

            <% if (user.local.email) { %>
            <p>
              <strong>id</strong>: <%= user._id %><br>
              <strong>email</strong>: <span class="teacherEmail"><%= user.local.email %></span><br>
              <strong>password</strong>: <%= user.local.password %>
            </p>
            <button id="buttonProfile"><a href="/unlink/local"></a>Unlink</button>
            <% } %>

          </div>
          <div id="connections">
            <h3>ðŸ“¬ My Connections</h3>
            <span id="messageSpan">Send a Message</span>
            <% if(user.local.usertype == 'parent') {%>
               <p id="parentSpan">You can send message to teachers after they add you to their parent list</p>
              <% } %>
            <ul>
              <% for(var i=0; i < user.local.myconnections.length; i++) {%>
               <li>
                 <span><%= user.local.myconnections[i].email %></span>
                 <span><a href="/messages/<%= user.local.myconnections[i].id %>"><i class="fas fa-paper-plane"></i></a></span>
               </li>
                <% } %>
            </ul>

            <% if(user.local.usertype == 'teacher') {%>

            <h3>ðŸ”½ Add a parent</h3>
            <ul>
              <% for(var i=0; i < allusers.length; i++) {%>
              <% if (allusers[i].local.usertype == "parent" && allusers[i].local.myconnections.length === 0) { %>
              <li>
                <span class="hide"><%= allusers[i]._id %></span>
                <span><%= allusers[i].local.email %></span>
                <span><i class="fas fa-plus-square"></i></span>
              </li>
              <% } %>
              <% } %>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>


    <script src="js/jquery.copy.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.copy.js"></script>
    <script src="profile.js"></script>
</body>

</html>
